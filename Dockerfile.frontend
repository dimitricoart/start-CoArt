FROM nginx:alpine

# Копируем собранный фронтенд
COPY services/client/dist /usr/share/nginx/html

# Копируем конфигурацию nginx
COPY nginx.frontend.conf /etc/nginx/conf.d/default.conf

# nginx слушает на порту 8080 (стандарт Cloud Run)
EXPOSE 8080

# Запускаем nginx
CMD ["nginx", "-g", "daemon off;"]

